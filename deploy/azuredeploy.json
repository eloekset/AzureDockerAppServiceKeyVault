{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string",
            "metadata": {
                "description": "Name of Azure Webapp"
            }
        },
        "hostingPlanName": {
            "type": "string",
            "metadata": {
                "description": "Name of App Service Plan"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all the resources"
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "Azure AD tenant for RBAC access to Key Vault"
            }
        },
        "identityType": {
            "type": "string",
            "allowedValues": [
                "SystemAssigned",
                "USerAssigned",
                "None"
            ]
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Key Vault containing private certificate for IdentityServer"
            }
        },
        "acrName": {
            "type": "string",
            "metadata": {
                "description": "Azure Container Registry name containing Docker image to deploy"
            }
        },
        "containerId": {
            "type": "string",
            "metadata": {
                "description": "Name of Docker container in ACR"
            }
        },
        "containerVersion": {
            "type": "string",
            "metadata": {
                "description": "The version of Docker image to deploy"
            }
        }
    },
    "functions": [],
    "variables": {
        "webAppPrincipalId": "",
        "webAppTenantId": "[parameters('tenantId')]",
        "webAppIdentityType": "[parameters('identityType')]",
        "acrUri": "[concat(parameters('acrName'), 'azurecr.io/', parameters('containerId'), ':', parameters('containerVersion'))]",
        "linuxFxVersion": "[concat('DOCKER|', variables('acrUri'))]"
    },
    "resources": [
        {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2018-11-01",
        "name": "[parameters('siteName')]",
        "location": "[parameters('location')]",
        "kind": "app,linux,container",
        "identity": {
            "principalId": "[variables('webAppPrincipalId')]",
            "tenantId": "[variables('webAppTenantId')]",
            "type": "[variables('webAppIdentityType')]"
        },
        "tags": {},
        "dependsOn": [
            "[parameters('hostingPlanName')]"
        ],
        "properties": {
            "name": "[parameters('siteName')]",
            "serverFarmId": "[parameters('hostingPlanName')]",
            "httpsOnly": true
        }
    }, 
    {
        "type": "Microsoft.Web/sites/config",
        "apiVersion": "2018-11-01",
        "name": "[concat(parameters('siteName'), '/web')]",
        "location": "[parameters('location')]",
        "dependsOn": ["[resourceId('Microsoft.Web/sites', parameters('siteName'))]"],
        "properties": {
            "linuxFxVersion":"[variables('linuxFxVersion')]",
            "alwaysOn": true,
            "minTlsVersion": "1.2"
        }
    },
    {
        "type": "Microsoft.Web/serverfarms",
        "apiVersion": "2018-02-01",
        "name": "[parameters('hostingPlanName')]",
        "location": "[parameters('location')]"
    },
    {
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2016-10-01",
        "name": "[parameters('keyVaultName')]",
        "location": "[parameters('location')]",
        "properties": {
            "tenantId": "[parameters('tenantId')]",
            "sku": {
                "name": "standard",
                "family": "A"
            },
            "accessPolicies": [
                {
                    "tenantId": "[parameters('tenantId')]",
                    "objectId": "[reference(resourceId('Microsoft.Web/sites', parameters('siteName')))]",
                    "permissions": {
                        "certificates": ["get", "list"]
                    }
                }
            ]
        }
    }],
    "outputs": {}
}